<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.StatisticFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/statistic_interval_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:padding="16dp">

            <include layout="@layout/interval_backdrop"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/statistic_main_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/statisticText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_statistic"/>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>